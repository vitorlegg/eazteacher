<%- include('header'); -%>

  <!-- Container Fluid-->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Groups</h1>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="<%=path%>/">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">Groups</li>
    </ol>
  </div>

  <div class="row mb-3">
    <div class="d-flex col align-items-center justify-content-start">
      <h2>Created</h2>
    </div>
    <div class="d-flex col align-items-center justify-content-end">
      <a type="button" style="color: white;" class="btn btn-primary" data-toggle="modal" data-target="#createGroup">
        <i class="fas fa-plus"></i>
      </a>
    </div>
  </div>

  <div class="row mb-3">
    <!-- Earnings (Monthly) Card Example -->
    <% criados.result.forEach(element=> {%>
      <div class="col-xl-3 col-md-6 mb-4">
        <div class="card h-100">
          <div class="card-body">

            <div class="row align-items-center">
              <div class="col  dropdown-list-image mr-3">
                <img class="rounded-circle" src="<%=element.imagem%>" style="max-width: 70px" alt="">
                <div class="status-indicator bg-success"></div>
              </div>
              <div class="col mr-2">
                <div class="h5 mb-0 font-weight-bold text-gray-800">
                  <%=element.nome%>#<%=element.grupos_id%>
                </div>
                <div class="text-xs font-weight-bold text-uppercase mb-1">
                  <%=element.descricao%>
                </div>
              </div>
              <div class="btn-group">
                <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                  <div class="col-auto">
                    <i class="fas fa-calendar fa-2x text-primary"></i>
                  </div>
                </a>
                <ul class="dropdown-menu">
                  <li><a name="createActivity" data-id=<%=element.grupos_id%> data-toggle = "modal" data-target =
                      "#modalCreateActivity" class = "dropdown-item text-primary opt">Create Activity</a></li>
                  <li><a name="excluir" data-id=<%=element.grupos_id%> class = "dropdown-item text-danger">Excluir</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%}); %>
  </div>

  <div class="row mb-3">
    <div class="d-flex col align-items-center justify-content-start">
      <h2>Follow</h2>
    </div>
    <div class="d-flex col align-items-center justify-content-end">
      <a type="button" style="color: white;" class="btn btn-primary" data-toggle="modal" data-target="#enterGroup">
        <i class="fas fa-plus"></i>
      </a>
    </div>
  </div>

  <div class="row mb-3">
    <!-- Earnings (Monthly) Card Example -->
    <% participando.result.forEach(element=> {%>
      <div class="col-xl-3 col-md-6 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <div class="row align-items-center">
              <div class="col  dropdown-list-image mr-3">
                <img class="rounded-circle" src="<%=element.imagem%>" style="max-width: 70px" alt="">
                <div class="status-indicator bg-success"></div>
              </div>
              <div class="col mr-2">
                <div class="h5 mb-0 font-weight-bold text-gray-800">
                  <%=element.nome%>#<%=element.grupos_id%>
                </div>
                <div class="text-xs font-weight-bold text-uppercase mb-1">
                  <%=element.descricao%>
                </div>
              </div>
              <div class="btn-group">
                <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                  <div class="col-auto">
                    <i class="fas fa-calendar fa-2x text-primary"></i>
                  </div>
                </a>
                <ul class="dropdown-menu">
                  <li><a name="showMembers" data-id=<%=element.grupos_id%> data-toggle = "modal" data-target =
                      "#modalShowMembers" class = "dropdown-item text-primary opt">Show Members</a></li>
                  <li><a name="sendMessage" data-id=<%=element.grupos_id%> data-toggle = "modal" data-target =
                      "#modalSendMessage" class = "dropdown-item text-primary opt">Send Message</a></li>
                  <li><a name="unfollow" data-id=<%=element.grupos_id%> class = "dropdown-item text-danger">Unfollow</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%}); %>
  </div>

  <div class="modal fade" id="createGroup" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabelLogout"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabelLogout">Create Group</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="/createGroup" method="post" enctype="multipart/form-data" >
          <div class="modal-body">
            <div class="form-group">
              <label for="input-file-now-cg" class="col-form-label" required>Image:</label>
              <div class="file-upload-wrapper">
                <input type="file" id="input-file-now-cg" name="file" class="file-upload" />
              </div>
            </div>
            <div class="form-group">
              <label for="recipient-name-cg" class="col-form-label" required>Group:</label>
              <input type="text" class="form-control" name="name" id="recipient-name-cg" maxlength="30">
            </div>
            <div class="form-group">
              <label for="message-text-cg" class="col-form-label">Description:</label>
              <textarea class="form-control" name="description" id="message-text-cg" maxlength="200"></textarea>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
            <button type="submit" type="button" class="btn btn-primary">Create</button>
          </div>
      </div>
      </form>
    </div>
  </div>

  <div class="modal fade" id="enterGroup" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabelLogout"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabelLogout">Create Group</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/participateGroup" method="post">
            <div class="form-group">
              <label for="recipient-name" class="col-form-label" required>Group:</label>
              <input type="text" class="form-control" name="name" id="recipient-name" maxlength="30">
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
          <button type="submit" type="button" class="btn btn-primary">participate</button>
        </div>
        </form>
      </div>
    </div>
  </div>

  <div class="modal fade" id="modalCreateActivity" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabelLogout"
    aria-hidden="true">

    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabelLogout">Create Activity</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <form id="createActivity" action="/createActivity" method="post" enctype="multipart/form-data">
          <div class="modal-body">
            <div class="form-group">
              <label for="recipient-name" class="col-form-label" required>Activity:</label>
              <input type="text" class="form-control" name="titulo" id="recipient-name" maxlength="30">
            </div>

            <div class="form-group">
              <label for="input-file-now" class="col-form-label" required>File:</label>
              <div class="file-upload-wrapper">
                <input type="file" id="input-file-now" name="file" class="file-upload" /> 
              </div>
            </div>

            <div class="form-group">
              <label for="input-date" class="col-form-label" required>Deadline:</label>
              <div class="form-group" id="simple-date1">
                <label for="simpleDataInput">Simple Data Input</label>
                  <div class="input-group date">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                    </div>
                    <input type="text"  id="input-date" name="conclusao" class="form-control" value="<%=new Date().toLocaleDateString('pt-BR', {timeZone: 'UTC'});%>" id="simpleDataInput">
                  </div>
              </div>
            </div>
            <div class="form-group">
              <label for="message-text" class="col-form-label">Description:</label>
              <textarea class="form-control" name="mensagem" id="message-text" maxlength="200"></textarea>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
            <button type="submit" type="button" class="btn btn-primary">Create</button>
          </div>
        </div>
      </form>
    </div>
  </div>
 
  <div class="modal fade" id="modalSendMessage" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabelLogout"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabelLogout">Create Message</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form id="sendMessage">
          <div class="modal-body">
            <div class="form-group">
              <label for="recipient-name" class="col-form-label" required>Header:</label>
              <input type="text" class="form-control" name="name" id="recipient-name" maxlength="30">
            </div>
            <div class="form-group">
              <label for="message-text" class="col-form-label">Message:</label>
              <textarea class="form-control" name="description" id="message-text" maxlength="400"></textarea>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
            <button type="submit" type="button" class="btn btn-primary">Send</button>
          </div>
      </div>
      </form>
    </div>
  </div>

  <div class="modal fade" id="modalShowMembers" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabelLogout"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabelLogout">Members</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form id="showMembers"></form>
        <div class="modal-body">
          <div class="form-group">
            <label for="recipient-name" class="col-form-label" required>Header:</label>
            <input type="text" class="form-control" name="name" id="recipient-name" maxlength="30">
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Message:</label>
            <textarea class="form-control" name="description" id="message-text" maxlength="400"></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
          <button type="submit" type="button" class="btn btn-primary">Send</button>
        </div>
      </div>
      </form>
    </div>
  </div>
  <!---Container Fluid-->
  <%- include('footer'); -%>